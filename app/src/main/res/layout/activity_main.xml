<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F6F6F6">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="-2dp"
        android:src="@drawable/bg_beranda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="45dp"
            />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengguna"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:layout_marginLeft="45dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Plat kamu"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:layout_marginLeft="45dp"
                />
            <TextView
                android:id="@+id/tv_plat_nomer_beranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P 1234 D"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/darkbluetext"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

<!--        Tampilan card view riwayat kendaraan masuk-->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"

            android:layout_marginTop="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_history"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rekap Keluar Masuk"
                android:textSize="20sp"
                android:textColor="@color/bluesky"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="105dp"
                />

        </androidx.cardview.widget.CardView>

<!--            Tampilan card view customer services-->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_customer_service"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"

            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_chatbot"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Butuh Bantuan?"
                android:textSize="20sp"
                android:textColor="@color/bluesky"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="105dp"
                />

        </androidx.cardview.widget.CardView>

<!--            Tampilan card view logout-->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"

            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_keluar"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="20sp"
                android:textColor="@color/bluesky"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="105dp"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>